{
  "name": "ci-platform",
  "private": true,
  "version": "0.1.0",
  "description": "CI platform actions, workflow for GitHub Actions",
  "author": "Furukawa, Atsushi <atsushifx@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "bash ./scripts/setup-dev-env.sh",
    "scan:secrets": "concurrently \"gitleaks dir --config ./configs/gitleaks.toml .\" \"secretlint --secretlintrc ./configs/secretlint.config.yaml **/*\"",
    "format:dprint": "dprint fmt",
    "check:dprint": "dprint check",
    "check:spells": "cspell  --config .vscode/cspell.json --cache --cache-location .cache/cspell/cSpellCache",
    "lint:text": "pnpm exec textlint --config ./configs/textlintrc.yaml --cache --cache-location .cache/textlintcache ",
    "lint:markdown": "pnpm exec markdownlint-cli2 --config ./configs/.markdownlint.yaml ",
    "test:sh": "bash scripts/run-specs.sh ",
    "test:sh:all": "pnpm run test:sh .github/actions/validate-environment/scripts/__tests__ && pnpm run test:sh .github/actions/__tests__"
  }
}
